<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip" >

    <TextView
        android:id="@+id/id_lvr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text=""
        android:visibility="invisible"
        android:layout_toLeftOf="@id/id_lvr1"/>

    <TextView
        android:id="@+id/lb_katdat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingTop="16dp"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="" />

    <TextView
        android:id="@+id/lb_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lb_katdat"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Eintrag" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lb_text1"
        android:layout_alignBottom="@+id/lb_text1"
        android:paddingRight="0dp"
        android:paddingTop="16dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:enabled="true"/>

    <TextView
        android:id="@+id/at_cbox_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text=""
        android:visibility="invisible"
        android:layout_toRightOf="@id/id_lvr1"/>

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text=""
        android:visibility="invisible"
        android:layout_toRightOf="@id/at_cbox_value"/>

</RelativeLayout>