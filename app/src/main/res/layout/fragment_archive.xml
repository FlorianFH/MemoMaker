<?xml version="1.0"?>

    <RelativeLayout
    tools:context="com.example.florian.memomaker.app.MainActivity$PlaceholderFragment"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:paddingBottom="0dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:isScrollContainer="true"
        android:orientation="vertical">

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/todos"/>

    <ListView
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:isScrollContainer="false"
        android:layout_weight="1"
        android:id="@+id/listViewTodoArchive"
        android:choiceMode="singleChoice"
        tools:listitem="@layout/listview_row" />

    <TextView
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/memos"/>

    <ListView
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:isScrollContainer="true"
        android:layout_weight="1"
        android:id="@+id/listViewMemoArchiv"
        android:choiceMode="singleChoice"
        tools:listitem="@layout/listview_row"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>

</RelativeLayout>